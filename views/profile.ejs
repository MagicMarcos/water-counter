<!DOCTYPE html>
<html>
	<head>
		<title>HydroHomies Tracker</title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
			crossorigin="anonymous"
		/>
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
		/>
		<link rel="stylesheet" href="style.css" />
	</head>

	<body class="profileBod">
		<div class="container">
			<header class="row my-3">
				<div class="col-12 d-flex flex-column align-items-center">
					<h1>Daily Water Intake</h1>
					<a href="/logout" class="btn btn-warning" role="button">Logout</a>
				</div>
			</header>
		</div>
		<div class="container-fluid bg-dark">
			<div class="container">
				<form action="/waterCount" method="POST" class="row">
					<div
						class="
							col-6
							d-flex
							flex-column
							justify-content-center
							align-items-center
						"
					>
						<p>Today is <span class="todayDate"></span>.</p>
						<div>
							<label for="time">Time:</label>
							<input type="time" id="timeOfDrink" name="time" />
						</div>

						<input id="date" type="date" value="" name="date" hidden />
					</div>
					<div
						class="
							col-6
							d-flex
							flex-column
							justify-content-center
							align-items-center
						"
					>
						<label for="AmoutOfWater">How much water did you drink? </label>
						<input
							type="range"
							name="waterAmount"
							id="waterAmount"
							min="0"
							max="15"
							step="1"
							value="15"
						/>
						<div>
							<output class="price-output" for="price"> </output>
							<span>cups</span>
						</div>
					</div>
					<div class="col-12 d-flex justify-content-center">
						<button class="btn btn-lg bg-danger my-3" type="submit">
							Submit
						</button>
					</div>
				</form>
			</div>
		</div>
		<div class="container">
			<section>
				<div class="waterTracking row my-3">
					<% waterCount.reverse().forEach(el => {%>
					<div class="col-sm-4 my-2">
						<div class="card">
							<div class="card-body">
								<h3 class="bg-info consumption">Your Consumption</h3>
								<div class="d-flex flex-column">
									<h2 class="waterAmount"><%= el.waterAmount%> cups</h2>
									<p class="card-title">
										On <span><%= el.date%></span> at <span><%= el.time%></span>
									</p>

									<span class="align-self-end"
										><button class="fa fa-trash" value="<%=el._id%>"></button
									></span>
								</div>
							</div>
						</div>
					</div>

					<%})%>
				</div>
			</section>
		</div>
		<script
			src="https://kit.fontawesome.com/c0e668a8ad.js"
			crossorigin="anonymous"
		></script>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"
		></script>
		<script src="main.js"></script>
	</body>
</html>
